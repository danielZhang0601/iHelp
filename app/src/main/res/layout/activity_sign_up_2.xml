<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_sign_in_2_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/iv_sign_up_2_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_sign_up_2_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:text="取消"
            android:textColor="#BCC8D2"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sign_up_2_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sign_in_2_title"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="32dp"
        android:text="已发送验证码到"
        android:textColor="#7F8D99"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_sign_up_2_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sign_up_2_tips"
        android:layout_marginLeft="46dp"
        android:textColor="#00CD82"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_sign_up_2_sms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:layout_below="@id/tv_sign_up_2_account"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_text_bg"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="#7F8D99"
            android:textColorHint="#BCC8D2">

            <requestFocus />
        </EditText>

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:text="(59)重获验证码"
            android:textColor="#00CD82"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_sign_up_2_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:layout_below="@id/ll_sign_up_2_sms"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_text_bg">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="20"
            android:hint="设置6位登录密码"
            android:textColor="#7F8D99"
            android:textColorHint="#BCC8D2" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_sign_up_2_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:layout_below="@id/rl_sign_up_2_password"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/common_button"
        android:text="提交注册"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

</RelativeLayout>